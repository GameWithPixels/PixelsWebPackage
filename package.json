{
  "name": "@systemic-games/pixels-library",
  "version": "0.0.2",
  "description": "Connect to Pixels dice using Web Bluetooth.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "umd:main": "dist/umd/index.js",
  "types": "dist/types/index.d.js",
  "scripts": {
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "build": "npm run build:cjs && npm run build:esm && npm run build:umd && npm run build:types",
    "webbuild": "npm run build:cjs && npm run build:types",
    "build:cjs": "node tools/cleanup cjs && tsc -p config/tsconfig.cjs.json",
    "build:esm": "node tools/cleanup esm && tsc -p config/tsconfig.esm.json",
    "build:umd": "node tools/cleanup umd && webpack --config config/webpack.config.js",
    "build:types": "node tools/cleanup types && tsc -p config/tsconfig.types.json",
    "clean": "node tools/cleanup",
    "package": "npm run build && npm pack",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\" --cache",
    "test": "jest --no-cache --runInBand",
    "test:cov": "jest --coverage --no-cache --runInBand",
    "docs": "npx typedoc",
    "addscope": "node tools/packagejson name @systemic-games/pixels-library"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "pixel",
    "pixels",
    "dice",
    "typescript",
    "bluetooth",
    "bluetoothle"
  ],
  "author": "Systemic Games (https://gamewithpixels.com)",
  "license": "MIT",
  "homepage": "https://github.com/GameWithPixels/PixelsWebPackage",
  "repository": {
    "type": "git",
    "url": "git@github.com:GameWithPixels/PixelsWebPackage.git"
  },
  "bugs": {
    "url": "https://github.com/GameWithPixels/PixelsWebPackage/issues"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@types/jest": "^27.0.1",
    "@types/web-bluetooth": "^0.0.14",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^7.0.4",
    "jest": "^27.2.0",
    "pinst": "^2.1.6",
    "prettier": "^2.4.0",
    "reflect-metadata": "^0.1.13",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.5",
    "typedoc": "^0.22.11",
    "typescript": "^4.4.3",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0"
  }
}
